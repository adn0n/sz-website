<section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-6xl font-bold text-center text-white mb-12 font-morris">tokenomics</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {/* Standard tokenomics boxes */}
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] rounded-lg blur-md opacity-0 group-hover:opacity-75 transition-all duration-500"></div>
          <div class="bg-gray-800 relative overflow-hidden rounded-lg p-6 text-center transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
            <h3 class="text-xl font-semibold text-white mb-2 relative z-10">LP Burned</h3>
            <p class="text-gray-300 group-hover:text-white transition-colors duration-500 relative z-10">100% of Liquidity Pool tokens burned</p>
          </div>
        </div>
  
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] rounded-lg blur-md opacity-0 group-hover:opacity-75 transition-all duration-500"></div>
          <div class="bg-gray-800 relative overflow-hidden rounded-lg p-6 text-center transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
            <h3 class="text-xl font-semibold text-white mb-2 relative z-10">Contract Renounced</h3>
            <p class="text-gray-300 group-hover:text-white transition-colors duration-500 relative z-10">Ownership renounced for maximum security</p>
          </div>
        </div>
  
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] rounded-lg blur-md opacity-0 group-hover:opacity-75 transition-all duration-500"></div>
          <div class="bg-gray-800 relative overflow-hidden rounded-lg p-6 text-center transition-all duration-500">
            <div class="absolute inset-0 bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
            <h3 class="text-xl font-semibold text-white mb-2 relative z-10">Zero Tax</h3>
            <p class="text-gray-300 group-hover:text-white transition-colors duration-500 relative z-10">No taxes on transactions<br/>0% buy and sell tax</p>
          </div>
        </div>
  
        {/* Token Burn box */}
        <div class="relative group">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] rounded-lg blur-md opacity-75"></div>
          <div class="bg-gradient-to-br from-[#4d9f4d] to-[#a88b5f] rounded-lg p-6 text-center relative">
            <h3 class="text-xl font-semibold text-white mb-2">Token Burn</h3>
            <p class="text-white">50% of total supply burned by TraderSZ</p>
          </div>
        </div>
  
        {/* Charity Lock box */}
        <div class="relative group col-span-1 md:col-span-2 lg:col-span-4">
          <div class="absolute -inset-0.5 bg-gradient-to-br from-[#a88b5f] to-[#4d9f4d] rounded-lg blur-md opacity-75"></div>
          <div class="bg-gradient-to-br from-[#a88b5f] to-[#4d9f4d] rounded-lg p-6 text-center relative">
            <h3 class="text-xl font-semibold text-white mb-2">Charity Lock</h3>
            <p class="text-white">8% of supply locked by SZ for charity donation</p>
          </div>
        </div>
      </div>
    </div>
  </section>

<style>
  @font-face {
    font-family: 'Morris';
    src: url('/fonts/morris.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  .glow-container {
    position: relative;
    overflow: hidden;
  }
  
  .glow-container::before {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom,
      rgba(168, 139, 95, 0.4),
      rgba(77, 159, 77, 0.4)
    );
    transition: all 0.4s ease-out;
    z-index: 1;
    opacity: 0;
    box-shadow: 
      inset 0 0 20px rgba(168, 139, 95, 0.6),
      0 0 25px rgba(77, 159, 77, 0.5);
  }

  .glow-container:hover::before {
    top: 0;
    opacity: 1;
    box-shadow: 
      inset 0 0 30px rgba(168, 139, 95, 0.8),
      0 0 35px rgba(77, 159, 77, 0.7);
  }
</style>
