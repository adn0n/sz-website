<script>
  let previousValue = 0;

  async function fetchMarketCap() {
    try {
      const response = await fetch(
        "https://api.dexscreener.com/latest/dex/tokens/HMx1sy5XQ4GmnLYCJ21Ldnv1A3boGRFHgKzLm52ypump",
        {
          cache: "no-cache",
        }
      );
      const data = await response.json();
      const marketCap = parseFloat(data?.pairs?.[0]?.fdv) || 0;
      const marketCapElement = document.getElementById("marketCap");

      if (marketCapElement) {
        const newValue = Math.round(marketCap * 0.49);

        if (previousValue !== newValue) {
          marketCapElement.classList.add("animate-value-change");
          setTimeout(() => {
            marketCapElement.classList.remove("animate-value-change");
          }, 300);

          marketCapElement.textContent = `$${newValue.toLocaleString()}`;
          previousValue = newValue;
        }
      }
    } catch (error) {
      console.error("Error fetching market cap:", error);
      const marketCapElement = document.getElementById("marketCap");
      if (marketCapElement) {
        marketCapElement.textContent = "Unable to load";
      }
    }
  }

  const copyButton = document.getElementById("copyButton");

  copyButton?.addEventListener("click", () => {
    const copyIcon = document.querySelector(".copy-icon");
    const checkIcon = document.querySelector(".check-icon");

    if (!copyIcon || !checkIcon) return;

    navigator.clipboard.writeText(
      "HMx1sy5XQ4GmnLYCJ21Ldnv1A3boGRFHgKzLm52ypump"
    );

    copyIcon.classList.add("hidden");
    checkIcon.classList.remove("hidden");

    setTimeout(() => {
      copyIcon.classList.remove("hidden");
      checkIcon.classList.add("hidden");
    }, 1000);
  });

  document.addEventListener("DOMContentLoaded", () => {
    // Initial fetch
    fetchMarketCap();

    // Update every 10 seconds
    setInterval(fetchMarketCap, 10000);
  });
</script>

